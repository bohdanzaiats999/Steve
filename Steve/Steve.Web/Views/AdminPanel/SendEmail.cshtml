<!DOCTYPE html>

@using Steve.BLL.Models;
@model List<UserModel>
@{
    ViewData["Title"] = "Send Email";
}
<html>
<head>
    <meta charset="utf-8">
    <title>Send Email</title>
</head>
<body>
    <form method="post">
        <div>
            <h1>Send Email</h1>
        </div>
            <br />
                <p><input type="text" size="101" name="FromAdressTitle" placeholder="From Adress Title" /></p>
                <p><input type="text" size="101" name="ToAddress" placeholder="To Address" /></p>
                <p><input type="text" size="101" name="Subject" placeholder="Subject" /></p>
                <p><textarea name="BodyContent" rows="15" cols="102" placeholder="Body Content" ></textarea></p>
        <div>

            <h2>List of users</h2>
@using (Html.BeginForm())
{
    for (var i = 0; i < Model.Count(); i++)
    {
        <table>
            <tr>
                <td>
                    @Html.HiddenFor(it => it[i].Id)
                    @Html.HiddenFor(it => it[i].Email)


                User: @Html.DisplayFor(it => it[i].Login)
                </td>
                <td>
                    @Html.CheckBoxFor(it => it[i].Checked, new { Style = "vertical-align:3px}" })
                </td>
            </tr>
        </table>

    }
}

    <p><input type="submit" value="Send" />
        </div>
    </form>
</body>
</html>

