@model Steve.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registration";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Registration</title>
</head>
<body>
    <div>
        <br />
        @using (Html.BeginForm())
            {
            <div>
                <p><input type="text" asp-for="Login" placeholder="Login"/></p>
            </div>
            <div>
                <p><input type="password" asp-for="Password" placeholder="Password"/></p>
            </div>
            <div>
                <p><input type="password" asp-for="ConfirmPassword" placeholder="Confirm Password"/></p>
            </div>
                <div>
                    <p><input type="email" asp-for="Email" placeholder="Email"/></p>
                </div>
                <p><input type="submit" value="Register" /></p>
        }
    </div>
</body>
</html>
