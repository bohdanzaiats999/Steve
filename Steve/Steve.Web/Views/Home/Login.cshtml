@model Steve.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Login</title>
</head>
<body>
    <div>
        <br />
        @using (Html.BeginForm())
            {
            <div>
                <p><input type="text" asp-for="Login" placeholder="Login" /></p>
            </div>
                <div>
                    <p><input type="password" asp-for="Password" placeholder="Password" /></p>
                </div>
                <div>
                    <p>
                        <input type="submit" value="Login" />
                        <a asp-controller="Home" asp-action="ChangePasswordByEmail">&nbspForgot password?</a>
                </div>
        }
    </div>
</body>
</html>
